@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "List";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px; min-height:500px;">
    @foreach (WebApplication4.Models.Projects p in ViewBag.Projects)
    {
        if (p.PostedById.Equals(User.Identity.GetUserId()))
        {
            continue;
        }

        <div class="jumbotron">
            <h1 class="display-4">@p.Title</h1>
            <hr class="my-4">
            <p>Posted by: @p.PostedBy.Name</p>
            <p>Specification: @p.Specification.Title</p>
            <p>Posted Date: @p.PostedDate</p>
            @Html.ActionLink("DETAILS", "ProjectDetails", "Home", new { id = @p.Id }, null)
        </div>
    }
    <script>
        $.notify({
            title: 'Would you like some Foo ?',
            button: 'Confirm'
        }, {
            style: 'foo',
            autoHide: false,
            clickToHide: false
        });
    </script>
    <pre></pre>
</div>
