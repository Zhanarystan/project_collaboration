@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-ui-1.11.3.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/notify.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/notify.min.js")' type="text/javascript"></script>
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .dl-horizontal dt {
            white-space: normal;
        }

        input,
        select,
        textarea {
            max-width: 280px;
        }
    </style>
</head>
<body style="padding-top: 50px; padding-bottom: 20px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Colloboration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home Page", "Index1", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="/User/Index/@User.Identity.GetUserId()">Profile</a></li>
                    }
                <li>
                    <div class="dropdown" style="margin-top:10px;">
                        
                        <button class="btn btn-secondary dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Requests</button>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <div class="card" style="padding:20px;">
                                @if (ViewBag.EnrollmentRequests != null)
                                {
                                
                                    foreach (WebApplication4.Models.EnrollmentRequests er in ViewBag.EnrollmentRequests)
                                    {

                                        if (er.Project.PostedById == User.Identity.GetUserId())
                                        {
                                <form action="/Home/RequestProcessing" method="post">
                                    <div class="card-body" style="width:400px;">
                                        <h4>@er.User.Name @er.User.Surname wants to apply to the project @er.Project.Title</h4>
                                        <input type="hidden" name="user_id" value="@er.UserId" />
                                        <input type="hidden" name="project_id" value="@er.ProjectId" />
                                        <button type="submit" name="accept" class="btn btn-success" onclick="">Accept</button>
                                        <button type="submit" name="reject" class="btn btn-danger">Reject</button>
                                    </div>
                                </form>

                                        }
                                    }
                                }
                                else
                                {
                                    <h5>There is no requests to your projects</h5>
                                }

                            </div>
                        </div>
                    </div>
                    
                </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                $("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },
                        modal: true
                    })
                    .load(this.href);
            });
        });
    </script>
    <script>
        $(function () {
            var tab = $('#tabs .tabs-items > div');
            tab.hide().filter(':first').show();

            // Клики по вкладкам.
            $('#tabs .tabs-nav a').click(function () {
                tab.hide();
                tab.filter(this.hash).show();
                $('#tabs .tabs-nav a').removeClass('active');
                $(this).addClass('active');
                return false;
            }).filter(':first').click();

            // Клики по якорным ссылкам.
            $('.tabs-target').click(function () {
                $('#tabs .tabs-nav a[href=' + $(this).data('id') + ']').click();
            });
        });
    </script>
    

</body>
</html>
